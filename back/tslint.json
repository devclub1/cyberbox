{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "src/models/migrations/*.ts"
        ]
    },
    "jsRules": {},
    "rules": {
        "trailling-comma": [false],
        "max-line-length": [
            true,
            {
              "limit": 140,
              "ignore-pattern": "^import |^export {(.*?)}",
              "check-strings": true,
              "check-regex": true
            }
        ],
        "curly": true,
        "no-trailing-whitespace": true,
        "quotemark": [true, "single"],
        "semicolon": true

    },
    "rulesDirectory": []
}